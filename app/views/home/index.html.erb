<div class="Sign_Form">

  <h1>Sign In</h1>
  <%= form_tag("/sign_in", method: "post") do %>
    <%= label_tag(:username, "Username") %>
    <%= text_field_tag(:username, nil, :required => true) %><br>
    <%= label_tag(:password, "Password")%>
    <%= password_field_tag(:password, nil, :required => true) %><br>
    <%= submit_tag("Sign In") %>
  <% end %>
  
</div>